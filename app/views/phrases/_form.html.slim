= form_for @phrase do |f|
  - if @phrase.errors.any?
    #error_explanation
      h2 = "#{pluralize(@phrase.errors.count, "error")} prohibited this phrase from being saved:"
      ul
        - @phrase.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :source
    = f.text_area :source
  .field
    = f.label :scene
    = f.text_area :scene
  .field
    = f.label :describe
    = f.text_area :describe
  .actions = f.submit

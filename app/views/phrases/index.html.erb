<p id="notice"><%= notice %></p>

<h1>Listing Phrases</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Source</th>
      <th>Scene</th>
      <th>Describe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phrases.each do |phrase| %>
      <tr>
        <td><%= phrase.body_md %></td>
        <td><%= phrase.source %></td>
        <td><%= phrase.scene %></td>
        <td><%= phrase.describe %></td>
        <td><%= link_to 'Show', phrase %></td>
        <td><%= link_to 'Edit', edit_phrase_path(phrase) %></td>
        <td><%= link_to 'Destroy', phrase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

